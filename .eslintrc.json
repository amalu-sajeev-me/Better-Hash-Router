{ "$schema": "https://json.schemastore.org/eslintrc",
    "env": {
        "browser": true,
        "amd": true,
        "es2021": true,
        "es6": true, 
        "node": true, 
        "mocha": true
    },
    "extends": [
        "standard", "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "modules": true
        }
    },
    "globals":  {
        "browser": true, 
        "commonjs": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "curly": "off",
        "quotes": "off",
        "no-extra-semi":"off",
        "semi": "off",
        "comma-dangle": "off"
    }
}
